@model WebAppWithMVC.Models.Publihsers.PublisherIndexViewModel
@{
    ViewData["Title"] = "PublisherList";
}

<h2>Publishers List</h2>

<a class="btn btn-primary mb-2" asp-action="Edit">Create Publisher</a>

@if (TempData.Keys.Contains("Message"))
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Country
            </th>
            <th>
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Publishers)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Country
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                    <button type="submit" onclick="return confirm('Do you really want to delete this Publihser? ');" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
                
            </td>
        </tr>
    }
    <tfoot style="visibility:@(!Model.Publishers.Any()? "visible" : "hidden")">
        <tr>
            <td>
                Nothing to Display.
            </td>
        </tr>

    </tfoot>


</table>