@page
@model WebApp.BookCopyEditModel
@{
    ViewData["Title"] = "BookCopyEdit";
}

<h2>Change number of Copies</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.BookCopy.BookId" />
    <input type="hidden" asp-for="@Model.BookCopy.LibraryId" />

    <div class="form-group">
        <label asp-for="BookCopy.NumberOfCopies"></label>
        <input class="form-control" asp-for="BookCopy.NumberOfCopies" />
        <span asp-validation-for="BookCopy.NumberOfCopies" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Edit</button>
        <a class="btn btn-primary" asp-page="/Libraries/LibraryDetails" asp-route-id="@Model.BookCopy.LibraryId">Back</a>
    </div>
</form>