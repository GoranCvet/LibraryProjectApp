@page "{id:int?}"
@model WebApp.PublisherEditModel
@{
    ViewData["Title"] = "PublisherEdit";
    var CreateEdit = Model.Publisher.Id > 0 ? "Edit" : "Create";
}

<h2>@CreateEdit Publisher</h2>

<form method="post">

    <input type="hidden" asp-for="Publisher.Id" />

    <div class="form-group">
        <label asp-for="Publisher.Name"></label>
        <input class="form-control" asp-for="Publisher.Name" />
        <span asp-validation-for="Publisher.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Publisher.Country"></label>
        <input class="form-control" asp-for="Publisher.Country" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-page="./PublisherList">To Publishers</a>
    </div>

</form>


