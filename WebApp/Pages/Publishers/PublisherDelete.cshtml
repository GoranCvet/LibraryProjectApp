@page "{id:int}"
@model WebApp.PublisherDeleteModel
@{
    ViewData["Title"] = "PublisherDelete";
}

<h3>Are you sure you want to Delete publisher @Model.Publisher.Name ?</h3>

<form method="post">

    <input type="hidden" asp-for="Publisher.Id" />

    <button class="btn btn-danger" type="submit">Yes</button>
    <a class="btn btn-primary" asp-page="./PublisherList">No</a>

</form>