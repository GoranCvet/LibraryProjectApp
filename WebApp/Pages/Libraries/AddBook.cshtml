@page
@model WebApp.AddBookModel
@{
        ViewData["Title"] = "AddBook";
}

<h2>Add Book to @Model.Library.Name Library</h2>

<form method="post">

    <input type="hidden" asp-for="@Model.Library.Id" />
    <input type="hidden" asp-for="@Model.Library.Name" />
    <input type="hidden" asp-for="@Model.Library.City" />
    <input type="hidden" asp-for="@Model.Library.Address" />

    <div class="form-group">
        <label asp-for="BookCopy.BookId"></label>
        <select class="form-control" asp-for="BookCopy.BookId" asp-items="@Model.SelectBook">
            <option value="">Select Book</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BookCopy.NumberOfCopies"></label>
        <input class="form-control" asp-for="BookCopy.NumberOfCopies" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-page="./LibrariesList">Back</a>
    </div>

</form>

