@page
@model WebApp.AddBookModel
@{
        ViewData["Title"] = "AddBook";
}

<h2>Add Book to Library</h2>

<form method="post">

    <input type="hidden" asp-for="BookCopiesLibrary.LibraryId" />

    <div class="form-group">
        <label asp-for="BookCopiesLibrary.BookCopiesId"></label>
        <select class="form-control" asp-for="BookCopiesLibrary.BookCopiesId" asp-items="@Model.SelectBook">
            <option value="">Select Book</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BookCopiesLibrary.LibriryCopies"></label>
        <input class="form-control" asp-for="BookCopiesLibrary.LibriryCopies" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-page="./LibrariesList">Back</a>
    </div>

</form>

